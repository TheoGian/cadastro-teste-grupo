@startuml
package "br.com.carsoft.model" {
    class Car {
        - id : String
        - name : String
        + getId() : String
        + setId(id:String) : void
        + getName() : String
        + setName(name:String) : void
    }
}

package "br.com.carsoft.repository" {
    class CarRepository {
        - FILE_PATH : String
        - gson : Gson
        - readFile() : List<Car>
        - writeFile(List<Car>) : void
        + findAll() : List<Car>
        + save(Car) : void
        + update(Car) : void
        + delete(String) : void
        + findById(String) : Car
    }
}

package "br.com.carsoft.servlet" {
    class CreateCarServlet
    class ListCarsServlet
    class UpdateCarServlet
    class DeleteCarServlet
}

