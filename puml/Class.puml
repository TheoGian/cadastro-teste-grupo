@startuml
package com.example.cadastro.model {
  class Cliente {
    - id: Long
    - nome: String
    - email: String
    - telefone: String
  }

  class Produto {
    - id: Long
    - nome: String
    - preco: Double
    - estoque: Integer
  }

  class PedidoItem {
    - id: Long
    - quantidade: Integer
    - precoUnitario: Double
    + getSubtotal(): Double
  }

  class Pedido {
    - id: Long
    - criadoEm: LocalDateTime
    + getTotal(): Double
  }
}

package com.example.cadastro {
  class CadastroApplication
}

package com.example.cadastro.repository {
  interface ClienteRepository
  interface ProdutoRepository
  interface PedidoRepository
  interface PedidoItemRepository
}

package com.example.cadastro.service {
  class ClienteService
  class ProdutoService
  class PedidoService
}

' Relacionamentos
Cliente "1" <-- "0..*" Pedido : cliente
Pedido "1" o-- "*" PedidoItem : itens
PedidoItem "*" --> "1" Produto : produto

ClienteService --> ClienteRepository
ProdutoService --> ProdutoRepository
PedidoService --> PedidoRepository
PedidoService --> ProdutoRepository
PedidoService --> ClienteRepository

@enduml
